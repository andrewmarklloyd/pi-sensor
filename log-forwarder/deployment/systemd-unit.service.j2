[Unit]
Description=pi-sensor-agent-log-forwarder
After=systemd-journald.service network.target
Requires=systemd-journald.service
StartLimitInterval=0

[Install]
WantedBy=multi-user.target

[Service]
EnvironmentFile=/usr/local/src/pi-sensor-agent/.forwarder-env-file
ExecStart=/usr/local/src/pi-sensor-agent/agent-log-forwarder
WorkingDirectory=/usr/local/src/pi-sensor-agent
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=30
User=pi
