#!/bin/bash


curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.37.2/install.sh | bash
. $HOME/.nvm/nvm.sh
cd server/frontend
nvm install
nvm use
npm install
npm run build
cd ../../
mkdir -p frontend/
mv server/frontend/build frontend/

curl -sL -o jq https://github.com/stedolan/jq/releases/download/jq-1.6/jq-linux64
chmod +x ./jq
